@model Upgrading.Models.Subjects

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form asp-action="Create" class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="SubjectName" class="form-control" />
                            <label asp-for="SubjectName" class="control-label"></label>
                            <span asp-validation-for="SubjectName" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <input type="submit" value="Create" class="w-100 btn btn-lg btn-outline-primary" />
                        </div>
                        <div class="col-6">
                            <a asp-controller="Subject" asp-action="Index" class="w-100 btn btn-lg btn-outline-primary">
                                <i class="bi bi-x-circle"> Cancel</i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
