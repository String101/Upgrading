@model Upgrading.ViewModel.LoginVM

<div class="container pt-5">
    <div class="">
        <div class="p-4">
            <div class="row">
                <div class="col-md-8">
                    <section>
                        <form method="post">
                            <input asp-for="@Model.RedirectUrl" hidden />
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                                <label class="form-label">Email</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.Password" class="form-control" aria-required="true" />
                                <label class="form-label">Password</label>
                            </div>
                            <div class="checkbox mb-3">
                                <input asp-for="@Model.RememberMe" class="form-check-input" />

                                <label class="form-label">
                                    Remember Me
                                </label>
                            </div>
                            <div>
                                <button type="submit" class="w-100 btn btn-lg btn-outline-info">Log in</button>
                            </div>
                            <div class="d-flex justify-content-between pt-2">
                                <p>
                                    <a asp-action="ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col-xl-4">
                    <img src="~/images/logo.jpg" width="100%" height="80%" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
