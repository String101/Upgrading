@model Upgrading.Models.Registration

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistrationFeeUrl" class="control-label"></label>
                <input asp-for="RegistrationFee" class="form-control" />
                <span asp-validation-for="RegistrationFeeUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.StudentName" class="control-label"></label>
                <input asp-for="@Model.Student.StudentName" disabled class="form-control" />
                <span asp-validation-for="@Model.Student.StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.StudentSurname" class="control-label"></label>
                <input asp-for="@Model.Student.StudentSurname" disabled class="form-control" />
                <span asp-validation-for="@Model.Student.StudentSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.StudentId" class="control-label"></label>
                <input asp-for="@Model.Student.StudentId" disabled class="form-control" />
                <span asp-validation-for="@Model.Student.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                   
                    <input class="form-check-input" asp-for="Accomodation" /> @Html.DisplayNameFor(model => model.Accomodation)
                </label>
            </div>
            <div class="form-group">
                <input asp-for="@Model.StudentId" hidden />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
